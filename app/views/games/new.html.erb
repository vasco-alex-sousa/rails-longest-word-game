<h1>New Game</h1>
<p class="letters">Letters:</p>
<p><strong><%= @letters.join(' ') %></strong></p>

<%= form_tag('/score', method: :post, data: { turbo: false }) do %>
  <%= label_tag(:word, 'Enter a word:') %>
  <%= text_field_tag(:word) %>
  <%= hidden_field_tag(:letters, @letters.join(' ')) %>
  <%= hidden_field_tag(:start_time, Time.now) %>
  <%= hidden_field_tag(:time) %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= submit_tag('Submit') %>
<% end %>
